{
  "name": "lyric-get-js",
  "version": "2.1.0",
  "private": true,
  "main": "lyric_engine_js/index.js",
  "scripts": {
    "start": "node server",
    "watch": "nodemon server",
    "test": "jest",
    "lint": "npx eslint lyric_engine_js"
  },
  "license": "Apache",
  "engines": {
    "node": "^14.15.0"
  },
  "dependencies": {
    "@sentry/node": "6.13.1",
    "html-entities": "^2.3.2",
    "iconv-lite": "^0.6.2",
    "mime-types": "^2.1.28",
    "striptags": "^3.2.0",
    "superagent": "^6.1.0"
  },
  "devDependencies": {
    "eslint": "^7.25.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-unicorn": "^36.0.0",
    "jest": "^27.0.3",
    "prettier": "^2.2.1"
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "plugin:unicorn/recommended",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "prettier",
      "unicorn"
    ],
    "rules": {
      "class-methods-use-this": "off",
      "camelcase": "off",
      "no-console": "off",
      "no-continue": "off",
      "no-restricted-syntax": [
        "error",
        "ForInStatement",
        "LabeledStatement",
        "WithStatement"
      ],
      "prettier/prettier": "error",
      "unicorn/prefer-module": "off",
      "unicorn/prevent-abbreviations": [
        "error",
        {
          "checkFilenames": false
        }
      ]
    }
  },
  "prettier": {
    "trailingComma": "es5",
    "singleQuote": true,
    "arrowParens": "always"
  }
}
